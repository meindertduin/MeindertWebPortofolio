@{
    ViewData["Title"] = "Login";
}

@model LoginModel


<div class="container">
    <div class="row justify-content-center align-content-center login-form">
        <div class="col-md-6 mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger form-validation-summery"></div>
            <form asp-action="Login">
                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl"/>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Gebruikersnaam</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input asp-for="UserName" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Watchtwoord</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="login" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .login-form{
        padding: 9%;
        box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
    }
    .form-validation-summery ul li{
        list-style-type: none;
    }
</style>