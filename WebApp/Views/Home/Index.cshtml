@using System.Globalization
@model List<Project>

@{
    ViewData["Title"] = "Home Page";
}



<div class="container-fluid" id="index-top">
    <div class="row text-center">
        <div class="col-8 align-self-start mt-5">
            <div class="display-1 font-weight-bold text-white">Ik ben Meindert</div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center font-weight-bold text-white">
            <h1>En ik ben graag opzoek naar een baan / bijbaan in ICT</h1>
        </div>
    </div>
    <div class="row">
        <div class="col12">
            <img src="static/images/coder.jpg" alt="Sorry de afbeelding kon niet worden geladen" class="img-fluid w-100" height="600">
        </div>
    </div>
</div>

<div class="container-fluid mt-0" id="index-profile">
    <hr>
    <div class="container">
        <div class="display-2 text-start font-weight-bold">Ikke in het kort</div>
        <div class="row align-content-center text-center">
            <div class="col-md-6 align-self-center">
                <img src="static/images/cc.jpg" alt="sorry mijn profiel foto kan op een of andere manier niet geladen worden..." class="img-thumbnail    ">
            </div>
            <div class="col-md-6 align-self-center">
                <p class="p-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium alias amet animi dignissimos earum excepturi facilis illum, labore magnam modi natus necessitatibus nemo nisi, nulla numquam quasi veritatis! Ab aperiam consequatur culpa cumque deleniti dolor dolorum error expedita fuga fugiat id inventore iste, iusto minus nam necessitatibus non praesentium quaerat quasi quia quidem similique, sit soluta temporibus ullam vel veritatis voluptatum. Ab aperiam, consequatur, debitis enim facilis hic labore laborum modi odio pariatur, porro quos sequi tempore. Doloremque esse explicabo incidunt necessitatibus nobis, rem repudiandae tempora voluptates! Ad cumque dicta, error exercitationem magni, perspiciatis quibusdam rem sapiente temporibus veritatis voluptatum.</p>
            </div>
        </div>
    </div>
    <div class="container">
        <hr>
        <div class="row">
            <div class="h1 font-weight-bold text-center">Evaringen</div>
        </div>
        <hr>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-md-4 text-center">
                <img src="static/images/c-logo.png" alt="" width="200" height="200">
                <div class="font-weight-bold">.NetCore / AspNetCore / Asp.NetFramework / Entity-Framework</div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 text-center">
                <img src="static/images/microsoft-sql-server.svg" alt="" width="200" height="200">
                <div class="font-weight-bold"></div>
            </div>
            <div class="col-12 col-sm-6 col-md-4 text-center">
                <img src="static/images/js-logo.png" alt="" width="200" height="200">
                <div class="font-weight-bold">es6 / Vue / Nuxt</div>
            </div>
        </div>
    </div>
    <div class="container">
        <hr>
        <div class="row">
            <div class="h1 font-weight-bold">Mijn Projecten</div>
            <hr>
        </div>
        <div class="row justify-content-center">
            @foreach (BigProjectViewModel project in @ViewBag.BigProjects)
            {
                <div class="col-md-6">
                    <div class="card">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="img-fluid d-block w-100 h-75" src="@Url.Action("GetBigProjectImage", new {id = project.Images[0].Id})" alt="Sorry de afbeelding kon niet worden geladen">
                                </div>
                    
                                @for (int i = 1; i < project.Images.Count; i++)
                                {
                                    <div class="carousel-item">
                                        <img class="img-fluid d-block w-100 h-75" src="@Url.Action("GetBigProjectImage", new {id = project.Images[i].Id})" alt="Sorry de afbeelding kon niet worden geladen">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="card-title h4">@project.Title</div>
                            <div class="card-subtitle h6">Features: @(string.Join(',', project.Features))</div>
                            <p class="card-text">@project.Description</p>
                            <a href="@project.GithubLink" target="_blank">
                                <button type="button" asp- class="btn btn-dark">Github <i class="fa fa-github" aria-hidden="true"></i></button>
                            </a>
                                            
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>
    <div class="container">
        <hr>
        <div class="row">
            <div class="col-12">
                <div class="h1 font-weight-bold">Oefen projecten</div>
                <hr>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-8">
                <div class="div">
                    Naast projecten die ik uitvoer zijn er ook veel github repositories die ik aanmaak voor het doen van oefen projectjes. Deze 
                    kleine projecten bestaan uit een onderwerp die ik graag wil leren zoals bijvoorbeeld een ontwerp patroon en die ik dan uitvoer.
                    Elk van deze projecten hebben als je erop klikt een korte beschrijving van wat de bedoeling is en een link naar een github repository.
                </div>
            </div>
            
        </div>
        
        <div class="row">
            <div class="col-4 col-md-2">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sorteer bij
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="name" onclick="setScrollPos()">Titel</a>
                    <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="name_desc" onclick="setScrollPos()">Titel aflopend</a>
                    <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date" onclick="setScrollPos()">Datum toegevoegd</a>
                    <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date_desc" onclick="setScrollPos()">Datum toegevoegd aflopend</a>
                </div>
            </div>
                
            <div class="col-4 col-md-2">
                <div class="dropdown show">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Vorige</a></li>
                            @for (int x = 0; x < ViewBag.PagesCount; x++)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-sortOrder="@ViewBag.SortParam" asp-route-index="@x" >@(x + 1)</a>
                                </li>    
                            }
                            <li class="page-item"><a class="page-link" href="#">Volgende</a></li>
        
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div id="accordion">
            @foreach (var project in ViewBag.Projects)
            {
                <div class="card text-white m-1" id="small-proj">
                    <div class="card-header" id="@("heading" + project.Id)">
                        <h5 class="mb-0">
                            <button class="btn text-white" data-toggle="collapse" data-target="@("#collapse" + project.Id)" aria-expanded="true" aria-controls="@("collapse" + project.Id)">
                                @project.Title: @project.TimeAdded.ToString("f", CultureInfo.CreateSpecificCulture("nl-NL"))
                            </button>
                        </h5>
                    </div>
                            
                    <div id="@("collapse" + project.Id)" class="collapse bg-white text-black-50" aria-labelledby="@("heading" + project.Id)" data-parent="#accordion">
                        <div class="card-body">
                            <div>@project.Description</div>
                            <a href="@project.GithubLink">@project.GithubLink</a>
                        </div>
                    </div>
                </div>
            }
        </div>    
        
    </div>
</div>



<script lang="js">    
    window.onload = function(){
        if(sessionStorage.getItem('scrollpos')){
            window.scrollTo(window.scrollX, parseInt(sessionStorage.getItem('scrollpos')));
            sessionStorage.setItem('scrollpos', 0);
        }
    }
    function setScrollPos(){
        sessionStorage.setItem('scrollpos', window.scrollY.toString());
    }
</script>

<style>
#index-top{
    background-color: #201a26;
}
#index-profile{
    background-color: #FFFBFC;
}
#small-proj{
    background-color: #05B2DC;
}

</style>