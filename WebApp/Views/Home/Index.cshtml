@using System.Globalization
@model List<Project>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col12">
            <img src="static/images/coder.jpg" alt="Sorry de afbeelding kon niet worden geladen" class="img-fluid w-100">
        </div>
    </div>
    <div class="row">
        <div class="col-6 align-self-start">
            <div class="display-1">I'm Meindert</div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h1>And im a aspiring programmer</h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <img src="static/images/cc.jpg" alt="sorry mijn profiel foto kan op een of andere manier niet geladen worden..." class="img-thumbnail    ">
        </div>
        <div class="col-md-6">
            <p class="p-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium alias amet animi dignissimos earum excepturi facilis illum, labore magnam modi natus necessitatibus nemo nisi, nulla numquam quasi veritatis! Ab aperiam consequatur culpa cumque deleniti dolor dolorum error expedita fuga fugiat id inventore iste, iusto minus nam necessitatibus non praesentium quaerat quasi quia quidem similique, sit soluta temporibus ullam vel veritatis voluptatum. Ab aperiam, consequatur, debitis enim facilis hic labore laborum modi odio pariatur, porro quos sequi tempore. Doloremque esse explicabo incidunt necessitatibus nobis, rem repudiandae tempora voluptates! Ad cumque dicta, error exercitationem magni, perspiciatis quibusdam rem sapiente temporibus veritatis voluptatum.</p>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="h1 text-center">Evaringen</div>
    </div>
    <hr>
    <div class="row">
        <div class="col-4">
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">c#</a>
                <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">javascript</a>
                <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">SQL</a>
            </div>
        </div>
        <div class="col-8">
            <div class="d-flex align-content-center">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, autem, beatae deserunt distinctio eos error iste libero maxime quia quibusdam, rem sint velit voluptatem! Ab accusantium eum in iure minima natus optio qui tempore. Amet deserunt hic illo, impedit iusto mollitia nesciunt non officia provident quaerat, ratione recusandae rem voluptatem.</div>
                    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
                    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="h1">Mijn Werk</div>
    </div>
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-12 col-sm-6 d-flex justify-content-center">
                <div class="card m-3">
                    <img class="card-img-top" src="static/images/wallhaven-2eroxm.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <button type="button" class="btn btn-dark">Github <i class="fa fa-github" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr>
    <div class="row">
        <div class="col-12">
            <div class="h1">Oefen projecten</div>
        </div>
    </div>
    
    
    <div class="row">
        <div class="col-2">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sorteer bij
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="" onclick="setScrollPos()">Titel</a>
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="name_desc" onclick="setScrollPos()">Titel aflopend</a>
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date" onclick="setScrollPos()">Datum toegevoegd</a>
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="date_desc" onclick="setScrollPos()">Datum toegevoegd aflopend</a>
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="finished_desc" onclick="setScrollPos()">afgerond</a>
                <a class="dropdown-item" asp-action="Index" asp-route-sortOrder="finished" onclick="setScrollPos()">niet afgerond</a>
            </div>
            
        </div>
        
        <div class="col-2">
            <div class="dropdown show">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Vorige</a></li>
                        @for (int x = 0; x < ViewBag.Projects.Count; x++)
                        {
                            <li class="page-item"><a class="page-link" href="#">@(x + 1)</a></li>
                        }
                        <li class="page-item"><a class="page-link" href="#">Volgende</a></li>

                    </ul>
                </nav>
            </div>
        </div>
    </div>
   
    <div id="accordion">
        @foreach (var project in ViewBag.Projects)
            {
                <div class="card @(project.Finished? "bg-success": "bg-primary") text-white m-1">
                    <div class="card-header" id="@("heading" + project.Id)">
                      <h5 class="mb-0">
                        <button class="btn text-white" data-toggle="collapse" data-target="@("#collapse" + project.Id)" aria-expanded="true" aria-controls="@("collapse" + project.Id)">
                            @project.Title: @project.TimeAdded.ToString("Y", CultureInfo.CreateSpecificCulture("nl-NL"))
                        </button>
                      </h5>
                    </div>
                
                    <div id="@("collapse" + project.Id)" class="collapse bg-white text-black-50" aria-labelledby="@("heading" + project.Id)" data-parent="#accordion">
                        <div class="card-body">
                            <div>@project.Description</div>
                            <a href="@project.GithubLink">@project.GithubLink</a>
                        </div>
                    </div>
                  </div>
            }
    </div>    
  
</div>


<script lang="js">    
    window.onload = function(){
        if(sessionStorage.getItem('scrollpos')){
            window.scrollTo(window.scrollX, parseInt(sessionStorage.getItem('scrollpos')));
        }
    }
    function setScrollPos(){
        sessionStorage.setItem('scrollpos', window.scrollY.toString());
    }
</script>